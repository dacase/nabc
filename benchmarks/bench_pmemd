#!/bin/sh

cat<<EOF  > mdin
  benchmark a short md
 &cntrl
   igb=8, cut=20.0, rgbmax=20.0, 
   tempi=50.0, temp0=300.0, dt=0.002, 
   ntb=0, nstlim=100, ntpr=10, ntt=3, gamma_ln=5.0, 
   ntx=1, irest=0,
   ntc=2, ntf=2, tol=0.0000001,
 /
EOF

sander=$AMBERHOME/bin/pmemd.cuda

$sander -O -i mdin -p $2 -c $3 -o $1.md.cuda.o < /dev/null
/bin/rm mdin restrt mdinfo
